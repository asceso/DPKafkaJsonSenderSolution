                            </Grid>
                            <Grid Margin="10"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="700" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           VerticalAlignment="Center"
                                           Text="Имя"
                                           TextWrapping="Wrap" />
                                <hc:TextBox Grid.Column="1"
                                            VerticalContentAlignment="Center"
                                            ShowClearButton="True"
                                            Text="{Binding Client.FirstName, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>
                            <Grid Margin="10"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="700" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           VerticalAlignment="Center"
                                           Text="Отчество"
                                           TextWrapping="Wrap" />
                                <hc:TextBox Grid.Column="1"
                                            VerticalContentAlignment="Center"
                                            ShowClearButton="True"
                                            Text="{Binding Client.MiddleName, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>
                            <Grid Margin="10"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="490" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           VerticalAlignment="Center"
                                           Text="Паспорт                 Cерия:"
                                           TextWrapping="Wrap" />
                                <hc:MaskedTextBox Grid.Column="1"
                                                  VerticalContentAlignment="Center"
                                                  Mask="0000"
                                                  ShowClearButton="True"
                                                  Text="{Binding Client.PassportSeries, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Grid.Column="2"
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"
                                           Text="Номер:"
                                           TextWrapping="Wrap" />
                                <hc:MaskedTextBox Grid.Column="3"
                                                  VerticalContentAlignment="Center"
                                                  Mask="000000"
                                                  ShowClearButton="True"
                                                  Text="{Binding Client.PassportNumber, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>
                            <Grid Margin="10"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="700" />
