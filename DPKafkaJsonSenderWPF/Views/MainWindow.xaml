                                           Text="Квартира"
                                           TextWrapping="Wrap" />
                                <hc:TextBox Grid.Column="7"
                                            VerticalContentAlignment="Center"
                                            ShowClearButton="True"
                                            Text="{Binding Client.HomeAddress.Flat, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>
                            <Grid Margin="10"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="700" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           VerticalAlignment="Center"
                                           Text="Код ФИАС"
                                           TextWrapping="Wrap" />
                                <hc:TextBox Grid.Column="1"
                                            VerticalContentAlignment="Center"
                                            ShowClearButton="True"
                                            Text="{Binding Client.HomeAddress.FiasCode, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>

                            <!--#endregion-->
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </StackPanel>
        <Border Grid.Column="1"
                Background="Black"
                CornerRadius="1"
                Opacity="0.5" />
        <StackPanel Grid.Column="2" Orientation="Vertical">

            <TextBlock Margin="7"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="14"
                       FontWeight="Bold"
                       Text="Link Responce" />
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0"
                         Height="50"
                         Margin="0,0,10,0"
                         IsReadOnly="True"
                         Text="{Binding Client.LinkResponce}"
                         TextWrapping="Wrap" />
                <Button Grid.Column="1"
                        Command="{Binding CopyLinkResponceCommand}"
                        Content="Copy" />
            </Grid>

            <TextBlock Margin="7"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="14"
                       FontWeight="Bold"
                       Text="Паспортные данные клиента" />
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0"
                         Height="150"
                         Margin="0,0,10,0"
                         IsReadOnly="True"
                         Text="{Binding Client.PassportResponce}"
                         TextWrapping="Wrap" />
                <Button Grid.Column="1"
                        Height="150"
                        Command="{Binding CopyPassportResponceCommand}"
                        Content="Copy" />
            </Grid>

            <TextBlock Margin="7"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="14"
                       FontWeight="Bold"
                       Text="Общие данные клиента" />
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0"
                         Height="350"
                         Margin="0,0,10,0"
                         IsReadOnly="True"
                         Text="{Binding Client.CommonResponce}"
                         TextWrapping="Wrap" />
                <Button Grid.Column="1"
                        Height="350"
                        Command="{Binding CopyCommonResponceCommand}"
                        Content="Copy" />
            </Grid>

        </StackPanel>
    </Grid>
</Window>
