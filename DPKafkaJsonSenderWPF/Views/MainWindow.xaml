<Window x:Class="DPKafkaJsonSenderWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:DPKafkaJsonSenderWPF.ViewModels"
        Title="{Binding Title}"
        Width="1600"
        Height="900"
        d:DataContext="{d:DesignInstance vm:MainWindowViewModel}"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="2" />
            <ColumnDefinition Width="700" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Orientation="Vertical">
            <TabControl>
                <TabItem Header="Время">
                    <ScrollViewer>
                        <StackPanel Orientation="Vertical" ScrollViewer.VerticalScrollBarVisibility="Visible">
                            <Grid Margin="10"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="700" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           VerticalAlignment="Center"
                                           Text="Время записи сообщения в топик"
                                           TextWrapping="Wrap" />
                                <hc:TimeBar Name="TimeStampControl"
                                            Grid.Column="1"
                                            VerticalContentAlignment="Center"
                                            TimeChanged="TimeStampTimeChanged"
                                            TimeFormat="yyyy-MM-dd HH:mm:ss.fff" />
                            </Grid>
                            <Grid Margin="10"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="700" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           VerticalAlignment="Center"
                                           Text="Время запроса в ЦП"
                                           TextWrapping="Wrap" />
                                <hc:TimeBar Name="RequestStampControl"
                                            Grid.Column="1"
                                            VerticalContentAlignment="Center"
                                            TimeChanged="TimeStampTimeChanged"
                                            TimeFormat="yyyy-MM-dd HH:mm:ss.fff" />
                            </Grid>
                            <Grid Margin="10"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="700" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           VerticalAlignment="Center"
                                           Text="Время ответа ЦП"
                                           TextWrapping="Wrap" />
                                <hc:TimeBar Name="ResponceStampControl"
                                            Grid.Column="1"
                                            VerticalContentAlignment="Center"
                                            TimeChanged="TimeStampTimeChanged"
                                            TimeFormat="yyyy-MM-dd HH:mm:ss.fff" />
                            </Grid>
                            <Button Click="CalculateTimeClick" Content="Отсчитать от текущего" />
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Основное">
                    <ScrollViewer>
                        <StackPanel Orientation="Vertical" ScrollViewer.VerticalScrollBarVisibility="Visible">
                            <Grid Margin="10"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center">
