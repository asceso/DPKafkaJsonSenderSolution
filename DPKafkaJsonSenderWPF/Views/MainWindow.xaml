                                <TextBlock Grid.Column="2"
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"
                                           Text="Код подразделения:"
                                           TextWrapping="Wrap" />
                                <hc:MaskedTextBox Grid.Column="3"
